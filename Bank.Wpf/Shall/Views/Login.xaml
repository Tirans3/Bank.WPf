<UserControl x:Class="Shall.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shall.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="100">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Width="100">
        <TextBlock Text="UserName" Margin="5"/>
        <TextBox Margin="5"/>
        <TextBlock Text="Password" Margin="5"/>
        <TextBox Margin="5"/>
        <Button Content="Submit" Margin="5" Background="GreenYellow"/>
    </StackPanel>
</UserControl>
